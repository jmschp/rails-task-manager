<%= form_for(task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br />
    <%= f.label :details %>
    <%= f.text_area :details %><br />
    <% if task.id %>
        <%= f.label :completed %>
        <%= f.check_box :completed %><br />
    <% end %>
    <%= f.submit %>
<% end %>